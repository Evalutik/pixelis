{
  "name": "yourname/pixel-board",
  "description": "Small PHP pixel board app",
  "type": "project",
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "files": ["bootstrap.php", "src/helpers.php", "src/csrf.php"]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^10",
    "guzzlehttp/guzzle": "^7.0"
  },
  "scripts": {
    "fix": "php-cs-fixer fix",
    "analyse": "phpstan analyse --level=max",
    "check": "php-cs-fixer fix --dry-run --diff && php -l $(git ls-files '*.php' | tr "\n" " ") && phpstan analyse --no-progress || true",
    "test": "phpunit --configuration phpunit.xml"
  }
}